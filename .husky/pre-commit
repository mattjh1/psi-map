#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Get staged Go files
STAGED_GO_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$')

if [ -z "$STAGED_GO_FILES" ]; then
  echo "No Go files staged for commit."
  exit 0
fi

echo "Running golangci-lint on staged files..."

# Run linter on each staged file
# Skip files that are deleted or moved
for file in $STAGED_GO_FILES; do
  if [ -f "$file" ]; then
    golangci-lint run "$file"
    if [ $? -ne 0 ]; then
      echo "golangci-lint failed on $file"
      exit 1
    fi
  fi
done

echo "golangci-lint passed on all staged Go files."
